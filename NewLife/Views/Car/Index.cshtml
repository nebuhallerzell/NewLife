@model List<Car>
@{
    ViewData["Title"] = "Araçlar";
}
@if (TempData["Succeed"] != null)
{
    <h2>@TempData["Succeed"]</h2>
}

<div class="container">
    <div class="row pt-3 pb-4">
        <h1>Arabalar</h1>
    </div>
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Araç Modeli</th>
                <th>Vites Türü</th>
                <th>Araç Km</th>
                <th>Araç Fiyatı</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Car_Name</td>
                    <td>@car.Car_About</td>
                    <td>@car.Car_Km</td>
                    <td>@car.Car_Price</td>
                    <td>
                        <a asp-controller="Car" asp-route-id="@car.Id" asp-action="Delete" class="btn btn-danger">Sil</a>
                    </td>
                    <td>
                        <a asp-controller="Car" asp-route-id="@car.Id" asp-action="AddUpdate" class="btn btn-success">Güncelle</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="row pt-3 pb-2">
        <div>
            <a asp-controller="Car" asp-action="AddUpdate" class="btn btn-warning" type="button">Add New Car</a>
        </div>
    </div>
</div>
