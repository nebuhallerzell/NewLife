@model NewLife.Models.Rent

@{
    ViewData["Title"] = "Kiralama Formu";
}

    <h2>Kiralama Formu</h2>

    <form asp-action="UserRent" method="post">

        <div class="form-group">
            <label asp-for="Rent_Time" class="control-label">Başlangıç</label>
            <input asp-for="Rent_Time" type="date" class="form-control" />
            <span asp-validation-for="Rent_Time" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Back_Time" class="control-label">Bitiş</label>
            <input asp-for="Back_Time" type="date" class="form-control" />
            <span asp-validation-for="Back_Time" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="UserId" class="control-label">Kullanıcı</label>
            <input type="text" class="form-control" value="@ViewBag.UserName" readonly />
            <input asp-for="UserId" type="hidden" />
        </div>
        <div class="form-group">
            <label asp-for="CarId" class="control-label">Araç</label>
            <input type="text" class="form-control" value="@ViewBag.CarName" readonly />
            <input asp-for="CarId" type="hidden" />
        </div>
        <div class="form-group">
            <input type="submit" value="Kaydet" class="btn btn-primary" />
        </div>
    </form>