@model CarBrands
@if (TempData["Succeed"] != null)
{
    <h2>@TempData["Succeed"]</h2>
}
<form method="post">
    <div class="border p-3 mt-5">

        <div class="row pb-3">
            <h1 class="text-warning">Update Brand</h1><hr />
        </div>

        <div class="mb-3">
            <label asp-for="Brand_Name">Brand Name</label>
            <input asp-for="Brand_Name" type="text" class="form-control" />
            <span asp-validation-for="Brand_Name" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-outline-warning">Update Brand</button>
        <a asp-controller="CarBrand" asp-action="Index" class="btn btn-outline-warning">Back</a>
    </div>
</form>
